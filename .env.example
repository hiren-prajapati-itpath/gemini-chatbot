# Gemini AI Configuration
GEMINI_MODEL=gemini-2.0-flash-001
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
DEMO_MODE=true
CACHE_TTL=28800s
PORT=3000
NODE_ENV=development

# Redis Configuration (for session storage)
REDIS_URL=redis://default:password@host:port
SESSION_STORAGE_TYPE=redis  # Options: redis, memory

# Session Configuration
SESSION_TTL_HOURS=24  # Session timeout in hours
SESSION_CLEANUP_INTERVAL=3600  # Cleanup interval in seconds

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=gemini_cache_db
DB_PORT=5432

# Alternative Database URLs (if using cloud providers)
# DATABASE_URL=postgresql://user:password@host:port/database

# Storage Configuration
UPLOAD_DIR=uploads  # Directory for file uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Environment-specific overrides
# For Production:
# NODE_ENV=production
# SESSION_STORAGE_TYPE=redis
# CACHE_TTL=86400s  # 24 hours

# For Development:
# NODE_ENV=development
# SESSION_STORAGE_TYPE=memory  # Faster for development

# Security (for production)
# JWT_SECRET=your_jwt_secret_here
# CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug

# Feature Flags
ENABLE_TOKEN_ANALYTICS=true
ENABLE_SESSION_PERSISTENCE=true
ENABLE_CACHE_METRICS=true
